<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homu"
    tools:context=".hunzahotel">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Accomadation in Hunza"
        android:textSize="30sp"

        android:textStyle="bold"
        app:fontFamily="cursive"
        android:gravity="center"
        android:background="#2B2B2B"
        android:textColor="#ffffff"
        >


    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click button below to select hotel"
        android:textSize="11dp"
        android:gravity="center"
        android:background="#2B2B2B"
        android:textColor="#ffffff"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:id="@+id/hh"
        android:text="Hunza serena inn"
        android:background="#2B2B2B"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/hhtwo"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"

        android:text="Balit Heritage"
        android:background="#2B2B2B"
        android:textColor="#ffffff" />
    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="25dp"
        android:id="@+id/hhthree"
        android:text="Eagles Nest"
        android:background="#2B2B2B"
        android:textColor="#ffffff"/>
</LinearLayout>

